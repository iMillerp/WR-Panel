{% extends 'LojaBundle::layout.html.twig' %}
{% block title %}WebRadio - Paginas edit{% endblock %}
{% block body %}
<div class="container">
  <div class="row">
    <div class="span11" style="padding-left: 30px;">
      <h1>Paginas</h1>
      <table class="table record_properties">
        <tbody>
          <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
          </tr>
          <tr>
            <th>Title</th>
            <td>{{ entity.title }}</td>
          </tr>
          <tr>
            <th>Body</th>
            <td>{{ entity.body }}</td>
          </tr>
        </tbody>
      </table>

      <ul class="record_actions">
        <li>
          <a href="{{ path('teste') }}">
            Back to the list
          </a>
        </li>
        <li>
          <a href="{{ path('teste_edit', { 'id': entity.id }) }}">
            Edit
          </a>
        </li>
        <li>
          <form action="{{ path('teste_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
              <button type="submit">Delete</button>
            </form>
          </li>
        </ul>
      </div>
    </div>
  </div>
{% endblock %}