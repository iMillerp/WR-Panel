{% extends 'LojaBundle::layout.html.twig' %}
{% block title %}WebRadio - Paginas edit{% endblock %}
 {% block menutop %}
<li><a href="/"><i class="icon-home"></i> Home</a></li>
<li><a href="/aradio.html"><i class="icon-info-sign"></i> A Radio</a></li>
<li><a href="/contato.html"><i class="icon-comment"></i> Contato</a></li>
                  {% endblock %}
{% block body %}
<div class="container">
  <div class="row">
    <div class="span11" style="padding-left: 30px;">
      <h1>Paginas list</h1>

      <table class="table records_list">
        <thead>
          <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Body</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
    {% for entity in entities %}
            <tr>
              <td><a href="{{ path('teste_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
              <td>{{ entity.title }}</td>
              <td>{{ entity.body }}</td>
              <td>
                <ul>
                  <li>
                    <a href="{{ path('teste_show', { 'id': entity.id }) }}">show</a>
                  </li>
                  <li>
                    <a href="{{ path('teste_edit', { 'id': entity.id }) }}">edit</a>
                  </li>
                </ul>
              </td>
            </tr>
    {% endfor %}
          </tbody>
        </table>

        <ul>
          <li>
            <a href="{{ path('teste_new') }}">
              Create a new entry
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
{% endblock %}